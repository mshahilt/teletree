<%- include('../partials/header') %>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    
    <style>
        .whatsapp-float {
            position: fixed;
            width: 60px;
            height: 60px;
            bottom: 40px;
            right: 40px;
            background-color: #25d366;
            color: #FFF;
            border-radius: 50px;
            text-align: center;
            font-size: 30px;
            box-shadow: 2px 2px 3px #999;
            z-index: 100;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        
        .whatsapp-float:hover {
            transform: scale(1.1);
            background-color: #128c7e;
            color: #FFF;
        }
        
        .hero-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .card-hover {
            transition: all 0.3s ease;
        }
        
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }
        
        .pulse-animation {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        
        .loading {
            opacity: 0.6;
            pointer-events: none;
        }
        
        .feature-icon {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
        }
        
        .btn-gradient {
            background: linear-gradient(135deg, #007bff, #6f42c1);
            border: none;
            transition: all 0.3s ease;
        }
        
        .btn-gradient:hover {
            background: linear-gradient(135deg, #0056b3, #5a2d91);
            transform: scale(1.05);
        }
        
        .popular-badge {
            position: absolute;
            top: -10px;
            left: 50%;
            transform: translateX(-50%);
            background: #28a745;
            color: white;
            padding: 0.25rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
        }
        
        .plan-card {
            position: relative;
            height: 100%;
        }
        
        .plan-card.popular {
            border: 2px solid #28a745;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <!-- WhatsApp Float Button -->
    <a href="https://wa.me/9400438406" class="whatsapp-float" target="_blank">
        <i class="fab fa-whatsapp"></i>
    </a>

    <!-- Hero Section -->
    <section class="hero-gradient py-5">
        <div class="container py-5">
            <div class="row justify-content-center text-center">
                <div class="col-lg-10">
                    <h1 class="display-3 fw-bold mb-4">
                        Your Trusted <span class="text-warning">Tele caller Helper</span>
                    </h1>
                    <p class="lead fs-4 mb-4 text-light">
                        Connect with verified, reliable tele callers for all your Tele calling needs
                    </p>
                    <button class="btn btn-light btn-lg px-5 py-3 text-primary fw-bold pulse-animation">
                        <i class="fas fa-search me-2"></i>Find Your Helper Now
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5 bg-white">
        <div class="container py-4">
            <div class="row justify-content-center text-center mb-5">
                <div class="col-lg-8">
                    <h2 class="display-5 fw-bold text-dark mb-3">Why Choose Tele Tree?</h2>
                    <p class="lead text-muted">Trusted, verified, and always available</p>
                </div>
            </div>
            
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="text-center p-4">
                        <div class="feature-icon bg-success bg-opacity-10">
                            <i class="fas fa-shield-alt text-success fs-2"></i>
                        </div>
                        <h3 class="h4 fw-semibold mb-3">Verified Professionals</h3>
                        <p class="text-muted">All our helpers are background-checked and verified</p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="text-center p-4">
                        <div class="feature-icon bg-primary bg-opacity-10">
                            <i class="fas fa-clock text-primary fs-2"></i>
                        </div>
                        <h3 class="h4 fw-semibold mb-3">Flexible Timing</h3>
                        <p class="text-muted">Book services at your convenient time</p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="text-center p-4">
                        <div class="feature-icon bg-purple bg-opacity-10" style="background: rgba(108, 117, 125, 0.1) !important;">
                            <i class="fas fa-star text-warning fs-2"></i>
                        </div>
                        <h3 class="h4 fw-semibold mb-3">Quality Assured</h3>
                        <p class="text-muted">Rated and reviewed by thousands of satisfied customers</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Pricing Plans -->
    <section class="py-5 bg-light">
        <div class="container py-4">
            <div class="row justify-content-center text-center mb-5">
                <div class="col-lg-8">
                    <h2 class="display-5 fw-bold text-dark mb-3">Choose Your Plan</h2>
                    <p class="lead text-muted">Flexible plans designed for your needs</p>
                </div>
            </div>
            
            <div class="row g-4" id="pricing-plans">
                <% plans.forEach((plan, index) => { %>
                  <div class="col-lg-4 col-md-6">
                    <div class="card plan-card card-hover border-0 shadow-sm h-100 <%= index === 1 ? 'popular' : '' %>">
                      <% if (index === 1) { %>
                        <div class="popular-badge">Most Popular</div>
                      <% } %>
                      <div class="card-body p-4 text-center">
                        <h3 class="card-title h4 fw-bold mb-3"><%= plan.plan %> Plan</h3>
                        <div class="mb-3">
                          <span class="display-4 fw-bold text-primary">â‚¹<%= plan.amount %></span>
                          <span class="text-muted">/ <%= plan.numberOfAllowedUsages %> candidates</span>
                        </div>
                        <p class="text-muted mb-4">Subscribe to view <%= plan.numberOfAllowedUsages %> candidates contact details.</p>

                        <ul class="list-unstyled mb-4">
                          <% plan.benefits.forEach(benefit => { %>
                            <li class="mb-2">
                              <i class="fas fa-check-circle text-success me-2"></i>
                              <%= benefit %>
                            </li>
                          <% }); %>
                        </ul>

                        <button 
                          onclick="initiatePayment('<%= plan._id %>, <%= plan.plan %>, <%= plan.amount %>')" 
                          class="btn btn-gradient btn-lg w-100 text-white fw-semibold"
                        >
                          <i class="fas fa-crown me-2"></i>Subscribe Now
                        </button>
                      </div>
                    </div>
                  </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function initiatePayment(planDetails) {
            const button = event.target;
            button.classList.add('loading');
            button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
            
            console.log(planDetails);
            const [planId, planName, amount] = planDetails.split(',');
            console.log("planId :", planId.trim());
            console.log("name :", planName.trim());
            console.log("amount :", amount.trim());
            
            fetch('/subscription/create-order', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    planId: planId.trim(),
                    amount: Number(amount.trim()) * 100
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const options = {
                        key: data.razorpayKeyId,
                        amount: data.order.amount,
                        currency: data.order.currency,
                        name: 'Tele Tree',
                        description: `${planName.trim()} Plan Subscription`,
                        image: '/logo.png',
                        order_id: data.order.id,
                        handler: function (response) {
                            verifyPayment(response, planId.trim());
                        },
                        prefill: {
                            name: 'Customer Name',
                            email: 'customer@example.com',
                            contact: '9400438406'
                        },
                        notes: {
                            planId: planId.trim(),
                            planName: planName.trim()
                        },
                        theme: {
                            color: '#007bff'
                        },
                        modal: {
                            ondismiss: function() {
                                // Reset button state
                                button.classList.remove('loading');
                                button.innerHTML = '<i class="fas fa-crown me-2"></i>Subscribe Now';
                            }
                        }
                    };
                    
                    const rzp = new Razorpay(options);
                    rzp.open();
                } else {
                    alert('Error creating order: ' + data.message);
                    // Reset button state
                    button.classList.remove('loading');
                    button.innerHTML = '<i class="fas fa-crown me-2"></i>Subscribe Now';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Something went wrong. Please try again.');
                // Reset button state
                button.classList.remove('loading');
                button.innerHTML = '<i class="fas fa-crown me-2"></i>Subscribe Now';
            });
        }

        // Verify payment
        function verifyPayment(paymentResponse, planId) {
            fetch('/subscription/verify-payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    razorpay_order_id: paymentResponse.razorpay_order_id,
                    razorpay_payment_id: paymentResponse.razorpay_payment_id,
                    razorpay_signature: paymentResponse.razorpay_signature,
                    planId: planId
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Payment successful! Your subscription is now active.');
                    // Redirect to dashboard or success page
                    // window.location.href = '/dashboard';
                } else {
                    alert('Payment verification failed: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Payment verification failed. Please contact support.');
            });
        }
    </script>
<%- include('../partials/footer') %>