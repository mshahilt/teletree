    <!-- Pricing Plans -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-800 mb-4">Choose Your Plan</h2>
                <p class="text-xl text-gray-600">Flexible plans designed for your needs</p>
            </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="pricing-plans">
          <% plans.forEach((plan) => { %>
            <div class="bg-white rounded-xl shadow-lg p-8 card-hover 
              <%= plan.plan === 'Standard' ? 'ring-2 ring-green-500 transform scale-105' : '' %>">
              
              <% if (plan.plan === 'Standard') { %>
                <div class="bg-green-500 text-white text-sm font-semibold py-1 px-4 rounded-full inline-block mb-4">
                  Most Popular
                </div>
              <% } %>

              <div class="text-center mb-6">
                <h3 class="text-2xl font-bold text-gray-800 mb-2"><%= plan.plan %> Plan</h3>
                <div class="flex items-baseline justify-center">
                  <span class="text-4xl font-bold text-blue-600">₹<%= plan.amount %></span>
                  <span class="text-gray-500 ml-2">/ <%= plan.numberOfAllowedUsages %> uses</span>
                </div>
              </div>

              <p class="text-center text-gray-600 mb-6">
                Perfect for 
                <%= plan.numberOfAllowedUsages <= 5 
                      ? 'small households' 
                      : plan.numberOfAllowedUsages <= 10 
                        ? 'regular families' 
                        : 'large families' %> 
                with comprehensive service needs.
              </p>

              <ul class="space-y-3 mb-8">
                <% plan.benefits.forEach((benefit) => { %>
                  <li class="flex items-center text-gray-700">
                    <i class="fas fa-check-circle text-green-500 mr-3"></i>
                    <%= benefit %>
                  </li>
                <% }); %>
                <li class="flex items-center text-gray-700">
                  <i class="fas fa-check-circle text-green-500 mr-3"></i>
                  Access to <%= plan.numberOfAllowedUsages %> service sessions
                </li>
              </ul>

              <button 
                onclick="initiatePayment(`<%= plan.id %>, &quot;<%= plan.plan %>&quot;, <%= plan.amount %>`)"
                class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold py-3 rounded-lg hover:from-blue-700 hover:to-purple-700 transition duration-300 transform hover:scale-105"
              >
                <i class="fas fa-crown mr-2"></i>Subscribe Now
              </button>
            </div>
          <% }); %>
        </div>

        </div>
    </section>

